#!/bin/bash
#SBATCH -N 10
#SBATCH -C cpu
#SBATCH -q regular
#SBATCH -J myjob
#SBATCH -t 01:00:00

#OpenMP settings:
export OMP_NUM_THREADS=2
export OMP_PLACES=threads
export OMP_PROC_BIND=spread
module load berkeleygw/3.0.1-cpu
module load espresso

#run the application:
srun -n 320 -c 2 --cpu_bind=cores inteqp.cplx.x &> inteqp.out