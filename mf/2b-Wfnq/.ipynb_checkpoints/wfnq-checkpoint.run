#!/bin/bash
#SBATCH -N 10
#SBATCH -C cpu
#SBATCH -q regular
#SBATCH -J myjob
#SBATCH -t 00:40:00

#OpenMP settings:
export OMP_NUM_THREADS=2
export OMP_PLACES=threads
export OMP_PROC_BIND=spread
module load espresso
module load berkeleygw/3.0.1-cpu

#run the application:
srun -n 320 -c 2 --cpu_bind=cores pw.x -nk 16 <wfnq.in> wfnq.out